{
  "functions": {
    "api/meta-tags.js": {
      "runtime": "nodejs18.x"
    }
  },
  "rewrites": [
    { 
      "source": "/recursos/blog/:slug", 
      "destination": "/api/meta-tags?slug=:slug" 
    },
    { "source": "/(.*)", "destination": "/" }
  ],
  "headers": [
    {
      "source": "/(.*)",
      "headers": [
        {
          "key": "Cache-Control",
          "value": "public, max-age=0, must-revalidate"
        }
      ]
    }
  ]
}
